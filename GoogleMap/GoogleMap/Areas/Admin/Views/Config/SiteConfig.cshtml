@model GoogleMap.Libs.Setting.SiteConfig

@{
    ViewData["Title"] = "网站配置";
}

<div class="bg-white d-flex align-items-center justify-content-between">
    <h5 class="mb-0 ml-2">网站配置</h5>
    <ol class="breadcrumb mb-0 bg-white align-self-end">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index">首页</a>
        </li>
    </ol>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form method="post" autocomplete="off">
                <div class="card mt-2">
                    <div class="card-header">
                        网站配置
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SiteName" class="control-label"></label>
                            <input asp-for="SiteName" class="form-control" />
                            <span asp-validation-for="SiteName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SiteFooter" class="control-label"></label>
                            <input asp-for="SiteFooter" class="form-control" />
                            <span asp-validation-for="SiteFooter" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GoogleKey" class="control-label"></label>
                            <input asp-for="GoogleKey" class="form-control" />
                            <span asp-validation-for="GoogleKey" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DefaultZoom" class="control-label"></label>
                            <input type="number" asp-for="DefaultZoom" class="form-control" />
                            <span asp-validation-for="DefaultZoom" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DisplayType" class="control-label"></label>
                            <select asp-for="DisplayType" asp-items="Html.GetEnumSelectList<GoogleMap.Libs.Enums.DisplayType>()" class="form-control">
                            </select>
                            <span asp-validation-for="DisplayType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary">提 交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>